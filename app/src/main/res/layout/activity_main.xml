<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="106px"
        android:layout_alignParentBottom="true"
        android:background="#fafafa"
        android:baselineAligned="false"
        android:gravity="center_vertical" >

        <LinearLayout 
            android:id="@+id/ll_home"
            style="@style/MainBottomItemStyle" >

            <ImageView
                android:id="@+id/iv_home"
                style="@style/MainBottomImageViewStyle"
                android:background="@drawable/selector_img_main_tab_home" />

            <TextView
                android:id="@+id/tv_home"
                style="@style/MainBottomTextViewStyle"
                android:text="首页" />
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/ll_buycar"
            style="@style/MainBottomItemStyle"  >

            <ImageView
                android:id="@+id/iv_buycar"
                style="@style/MainBottomImageViewStyle"
                android:background="@drawable/selector_img_main_tab_buy_car"/>

            <TextView
                android:id="@+id/tv_buycar"
                style="@style/MainBottomTextViewStyle"
                android:text="买车" />
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/ll_sell_car"
            style="@style/MainBottomItemStyle"  >

            <ImageView
                android:id="@+id/iv_sell_car"
                style="@style/MainBottomImageViewStyle"
                android:background="@drawable/selector_img_main_tab_sell_car" />

            <TextView
                android:id="@+id/tv_sell_car"
                style="@style/MainBottomTextViewStyle"
                android:text="卖车" />
        </LinearLayout>

        <LinearLayout 
            android:id="@+id/ll_me"
            style="@style/MainBottomItemStyle" >

            <ImageView
                android:id="@+id/iv_me"
                style="@style/MainBottomImageViewStyle"
                android:background="@drawable/selector_img_main_tab_me" />

            <TextView
                android:id="@+id/tv_me"
                style="@style/MainBottomTextViewStyle"
                android:text="我的" />
        </LinearLayout>
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_bottom_bar"
        android:background="@android:color/white" />

</RelativeLayout>
